{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "prettier",
    "airbnb",
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:import/recommended"
  ],
  "plugins": ["import"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "react/react-in-jsx-scope": "off",
    "react/jsx-props-no-spreading": "off",
    "react/prop-types": "off",
    "react/button-has-type": "off",
    "jsx-a11y/interactive-supports-focus": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/control-has-associated-label": "off",
    "jsx-a11y/label-has-associated-control": [
      "error",
      {
        "some": ["nesting", "id"]
      }
    ],
    "sort-imports": [
      "error",
      {
        "ignoreCase": false,
        "ignoreDeclarationSort": true,
        "ignoreMemberSort": false,
        "allowSeparatedGroups": true
      }
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          ["parent", "sibling"],
          "index",
          "unknown"
        ],
        "pathGroups": [
          {
            "pattern": "react*",
            "group": "builtin"
          },
          {
            "pattern": "react*/*",
            "group": "builtin"
          },
          {
            "pattern": "hooks/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "contexts/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "pages/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "components/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "utils/**",
            "group": "index",
            "position": "before"
          },
          {
            "pattern": "constants",
            "group": "index"
          },
          {
            "pattern": "assets/**",
            "group": "index"
          },
          {
            "pattern": "./*.css",
            "group": "index",
            "position": "after"
          },
          {
            "pattern": "./*.module.css",
            "group": "index",
            "position": "after"
          }
        ],
        "pathGroupsExcludedImportTypes": ["css"],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "jsx-quotes": ["error", "prefer-single"],
    "prefer-destructuring": [
      "error",
      {
        "VariableDeclarator": {
          "array": false,
          "object": true
        },
        "AssignmentExpression": {
          "array": false,
          "object": true
        }
      },
      {
        "enforceForRenamedProperties": true
      }
    ],
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "overrides": [
    {
      "files": ["src/components/Select/Select.jsx"],
      "rules": {
        "jsx-a11y/no-noninteractive-element-to-interactive-role": "off"
      }
    },
    {
      "files": ["src/components/CustomCalendar/CustomCalendar.jsx"],
      "rules": {
        "react/no-unstable-nested-components": "off"
      }
    },
    {
      "files": ["src/utils/getTextColorByBackgroundColor.js"],
      "rules": {
        "no-bitwise": "off"
      }
    },
    {
      "files": ["src/index.js"],
      "rules": {
        "react/jsx-filename-extension": [
          "error",
          { "extensions": [".jsx", ".js"] }
        ]
      }
    }
  ]
}
